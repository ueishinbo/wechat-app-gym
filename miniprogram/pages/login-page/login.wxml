<!--pages/login/login.wxml-->

<view class="container"> 
 <view class="login-icon"> 
 </view>
 <view class = "login-from">
<!---账号-->
<view class = "inputView {{focusID?'focus':'blur'}}">

<label class ="loginLab">账号</label>
<input class="inputText" placeholder="请输入手机号/邮箱" bindinput = "phoneInput" bindfocus="focusID" bindblur="blurID"/>
</view> 

<!--密码-->
 <view class="inputView {{focusPassword?'focus':'blur'}}"> 

 <label class="loginLab">密码</label> 
 <input class="inputText" password="true" placeholder="请输入密码" bindinput="passwordInput" bindfocus="focusPassword" bindblur="blurPassword"/> 
 </view> 
  
  <!--按钮-->
  <view class="loginBtnView"> 
 <button class="loginBtn" form-type="login" bindtap="login">登录</button> 
 <button class="loginBtnbt" form-type="register" bindtap="register" >注册</button>

 </view> 
 </view> 
</view>
